<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginRight="10dp">
    </ImageView>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">>

        <TextView
            android:id="@+id/ContactNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="etu nimi">

        </TextView>
        <TextView
            android:id="@+id/ContactNumberText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="suku nimi">

        </TextView>
        <TextView
            android:id="@+id/ContactGroupText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="puhelinnumero">

        </TextView>



    </LinearLayout>

    <Button
        android:id="@+id/ContactDetailsButton"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="D">

    </Button>
    <Button
        android:id="@+id/ContactDeleteButton"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="E">

    </Button>


</androidx.appcompat.widget.LinearLayoutCompat>